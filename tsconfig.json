{
	"compilerOptions": {
		"esModuleInterop": true,
		"skipLibCheck": true,
		"target": "ES2023",
		"resolveJsonModule": true,
		"moduleDetection": "force",
		"isolatedModules": true,

		"strict": true,
		"noUncheckedIndexedAccess": true,
		"noImplicitOverride": true,

		"module": "NodeNext",
		"outDir": "dist",
		"sourceMap": true,

		"declaration": true
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
