{
  "name": "typescript-starter",
  "version": "1.0.0-dev",
  "description": "Typescript skeleton for building your libraries or projects. Includes eslint, prettier and jest",
  "keywords": [
    "template",
    "skeleton",
    "typescript",
    "eslint",
    "prettier",
    "jest",
    "bootstrap",
    "scaffold"
  ],
  "author": "Juan Miguel Besada <https://twiter.com/juanmibesada>",
  "license": "MIT",
  "homepage": "https://github.com/juanmiguelbesada/typescript-starter#readme",
  "repository": "github:juanmiguelbesada/typescript-starter",
  "bugs": "https://github.com/juanmiguelbesada/typescript-starter/issues",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "format": "prettier .",
    "format:fix": "npm run format -- --write",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest",
    "test:watch": "npm test -- --watch"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.2",
    "typescript": "^4.2.2"
  }
}
